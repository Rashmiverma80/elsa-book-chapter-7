# =====================================================
# Predictive Analytics on Natural Fiber–Recycled Aggregate Concrete
# Targets: Compressive Strength & Split Tensile Strength
# =====================================================

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
# -----------------------------
# 1. Load Dataset
# -----------------------------
pd.set_option('future.no_silent_downcasting', True)
df = pd.read_excel("dataset.xlsx")   # <-- keep file in same folder

# Replace non-numeric placeholders
df = df.replace('x', np.nan)
df = df.infer_objects(copy=False)

# Target variables
targets = ['Compressive Strength (MPa)', 'Split Tensile Strength (MPa)']

# Drop rows with missing targets
df.dropna(subset=targets, inplace=True)

# -----------------------------
# 2. Feature–Target Separation
# -----------------------------
X = df.drop(columns=targets + ['Source'])
y_comp = df['Compressive Strength (MPa)']
y_split = df['Split Tensile Strength (MPa)']

# One-hot encode Fiber Type
X = pd.get_dummies(X, columns=['Fiber Type'], drop_first=True)

# Convert everything to numeric
X = X.apply(pd.to_numeric, errors='coerce')

# Drop remaining NaNs
mask = X.notnull().all(axis=1)
X = X[mask]
y_comp = y_comp[mask]
y_split = y_split[mask]

print("Final dataset shape:", X.shape)

# -----------------------------
# 3. Train–Test Split & Scaling
# -----------------------------
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler

X_train, X_test, y_comp_train, y_comp_test, y_split_train, y_split_test = train_test_split(
    X, y_comp, y_split, test_size=0.2, random_state=42
)

scaler = StandardScaler()
X_train_s = scaler.fit_transform(X_train)
X_test_s = scaler.transform(X_test)

# -----------------------------
# 4. Model Definitions
# -----------------------------
from sklearn.ensemble import RandomForestRegressor
from xgboost import XGBRegressor
from sklearn.neural_network import MLPRegressor

models = {
    "Random Forest": RandomForestRegressor(
        n_estimators=300, random_state=42
    ),
    "XGBoost": XGBRegressor(
        n_estimators=300, learning_rate=0.05,
        max_depth=5, random_state=42
    ),
   "ANN": MLPRegressor(
    hidden_layer_sizes=(64, 32),
    activation='relu',
    solver='adam',
    max_iter=3000,
    early_stopping=True,
    validation_fraction=0.1,
    n_iter_no_change=20,
    random_state=42
)
    
}

# -----------------------------
# 5. Model Training & Evaluation
# -----------------------------
from sklearn.metrics import r2_score, mean_squared_error, mean_absolute_error

results = []
predictions = {}

for name, model in models.items():
    # ---- Compressive Strength ----
    model.fit(X_train_s, y_comp_train)
    pred_comp = model.predict(X_test_s)

    # ---- Split Tensile Strength ----
    model.fit(X_train_s, y_split_train)
    pred_split = model.predict(X_test_s)

    predictions[name] = (pred_comp, pred_split)

    results.append({
    "Model": name,
    "R2_Compressive": r2_score(y_comp_test, pred_comp),
    "RMSE_Compressive": np.sqrt(mean_squared_error(y_comp_test, pred_comp)),
    "MAE_Compressive": mean_absolute_error(y_comp_test, pred_comp),
    "R2_Split": r2_score(y_split_test, pred_split),
    "RMSE_Split": np.sqrt(mean_squared_error(y_split_test, pred_split)),
    "MAE_Split": mean_absolute_error(y_split_test, pred_split)
})


results_df = pd.DataFrame(results)
print("\nModel Performance Summary:")
print(results_df)

# -----------------------------
# 6. Save Results Table
# -----------------------------
results_df.to_csv("Table_6_2_Model_Performance.csv", index=False)

# -----------------------------
# 7. Visualization: Actual vs Predicted
# -----------------------------
for name, (pred_c, pred_s) in predictions.items():
    
    # ---- Compressive Strength ----
    plt.figure(figsize=(8,6))
    plt.scatter(y_comp_test, pred_c, color='blue', alpha=0.7)
    plt.plot([y_comp_test.min(), y_comp_test.max()],
             [y_comp_test.min(), y_comp_test.max()], 'r--')
    plt.xlabel("Experimental Compressive Strength (MPa)")
    plt.ylabel("Predicted Compressive Strength (MPa)")
    plt.title(f"{name}: Compressive Strength")
    plt.grid(True)
    
    # Save figure
    plt.savefig(f'Figure6_Compressive_{name.replace(" ", "_")}.png', dpi=300, bbox_inches='tight')
    plt.show()

    # ---- Split Tensile Strength ----
    plt.figure(figsize=(8,6))
    plt.scatter(y_split_test, pred_s, color='green', alpha=0.7)
    plt.plot([y_split_test.min(), y_split_test.max()],
             [y_split_test.min(), y_split_test.max()], 'r--')
    plt.xlabel("Experimental Split Tensile Strength (MPa)")
    plt.ylabel("Predicted Split Tensile Strength (MPa)")
    plt.title(f"{name}: Split Tensile Strength")
    plt.grid(True)
    
    # Save figure
    plt.savefig(f'Figure6_Split_{name.replace(" ", "_")}.png', dpi=300, bbox_inches='tight')
    plt.show()

